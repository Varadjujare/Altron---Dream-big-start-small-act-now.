{
  "version": 2,
  "builds": [
    {
      "src": "backend/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/app.py" },
    { "source": "/home", "destination": "/frontend/home.html" },
    { "source": "/habits", "destination": "/frontend/habits.html" },
    { "source": "/tasks", "destination": "/frontend/tasks.html" },
    { "source": "/calendar", "destination": "/frontend/calendar.html" },
    { "source": "/analytics", "destination": "/frontend/analytics.html" },
    { "source": "/settings", "destination": "/frontend/settings.html" },
    { "source": "/dashboard", "destination": "/frontend/dashboard.html" },
    { "source": "/register", "destination": "/frontend/register.html" },
    { "source": "/login", "destination": "/frontend/index.html" },
    { "source": "/", "destination": "/frontend/index.html" },
    { "source": "/(.*)", "destination": "/frontend/$1" }
  ]
}
